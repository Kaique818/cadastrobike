<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="BikesActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:text="Bikes"
        android:textAllCaps="true"
        android:textColor="#673AB7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idBikeNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idBikeUsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Used" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idBikeDonate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate" />


        <com.google.android.material.tabs.TabItem
            android:id="@+id/idBikeStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Street" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idBikeMontain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Montain" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idBike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idViewPagerBikes"/>
</LinearLayout>
